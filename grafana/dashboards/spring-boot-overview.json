{
  "uid": "spring-boot-overview",
  "title": "Spring Boot Web API Overview",
  "tags": ["spring", "micrometer", "web"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_server_requests_seconds_count, job)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "HTTP Request Rate",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$job\"}[1m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "type": "stat",
      "title": "HTTP Error Rate (5xx)",
      "datasource": "Prometheus",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$job\",status=~\"5..\"}[1m]))",
          "legendFormat": "5xx/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests by URI",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\"$job\"}[1m])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job=~\"$job\",area=\"heap\"}) by (job)",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Process CPU Usage",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "avg(process_cpu_usage{job=~\"$job\"}) by (job)",
          "legendFormat": "{{job}}"
        }
      ]
    }
  ]
}
